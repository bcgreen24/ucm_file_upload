/**
 * Implements hook_user_default_permissions().
 */
function ucm_file_upload_user_default_permissions() {
  $permissions = array();

  // Exported permission: upload files.
  $permissions['upload files'] = array(
    'name' => 'upload files',
    'roles' => array(
      0 => 'administrator',
      1 => 'site manager',
    ),
    'module' => 'ucm_file_upload',
  );

  return $permissions;
}
